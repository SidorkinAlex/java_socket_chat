<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="300.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.ChatController">
    <top>
        <BorderPane>
            <left>
                <Label fx:id="lNick" text="Чат" HBox.hgrow="ALWAYS">
                    <font>
                        <Font name="System Bold" size="20.0" />
                    </font>
                </Label>
            </left>

            <right>
                <HBox>
                    <Button prefWidth="100" text="Выйти" onAction="#logoutButtonAction" >
                        <HBox.margin>
                            <Insets right="10.0" />
                        </HBox.margin>
                    </Button>
                    <Button prefWidth="100" text="Удалиться" onAction="#deleteButtonAction" />
                </HBox>
            </right>

            <BorderPane.margin>
                <Insets bottom="10.0" />
            </BorderPane.margin>
        </BorderPane>
    </top>
    <center>
        <HBox>
            <TextArea fx:id="taChat" editable="false" focusTraversable="false" wrapText="true" BorderPane.alignment="CENTER" HBox.hgrow="ALWAYS">
                <HBox.margin>
                   <Insets right="10.0" />
                </HBox.margin>
            </TextArea>

            <TextArea fx:id="taUserList" editable="false" prefWidth="200" minWidth="100" />
            
            <BorderPane.margin>
                <Insets bottom="10.0" />
            </BorderPane.margin>
        </HBox>
    </center>
    <bottom>
        <HBox>
            <TextField fx:id="tfMessage" HBox.hgrow="ALWAYS" onAction="#sendButtonAction" >
                <HBox.margin>
                    <Insets right="10.0" />
                </HBox.margin>
            </TextField>
            <Button onAction="#sendButtonAction" prefWidth="100" text="Послать" />
        </HBox>
    </bottom>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
</BorderPane>
